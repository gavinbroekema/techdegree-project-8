include header
h1 Update Book
form(method='post', action=`/books/${book.dataValues.id}`)
  if error
    h2.error Oooops!
    ul.error
      each err in error
        li #{err.message}
  p
    label(for='title') Title
    input#title(name='title', type='text', value=`${book.dataValues.title}`)
  p
    label(for='author') Author
    input#author(name='author', type='text', value=`${book.dataValues.author}`)
  p
    label(for='genre') Genre
    input#genre(name='genre', type='text', value=`${book.dataValues.genre}`)
  p
    label(for='year') Year
    input#year(name='year', type='text', value=`${book.dataValues.year}`)
  p
    input(type='submit', value='Update Book')